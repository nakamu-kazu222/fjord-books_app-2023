<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <header>
      <% if user_signed_in? %>
        <li>
          <%= link_to t('views.layouts.application.logout'), destroy_user_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to t('views.users.index.title'), users_path %>
        </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
