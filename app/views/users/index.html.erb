<h1><%= t('views.common.title_index', name: i18n_pluralize(User.model_name.human)) %></h1>

<div id="users" class="index-items">
  <% @users.with_attached_user_icon.each do |user| %>
    <div class="index-item">
      <%= render user %>
      <p>
        <%= link_to t('views.common.show', name: User.model_name.human.downcase), user %>
      </p>
      <p>
        <% if user.user_icon.attached? %>
          <%= image_tag user.user_icon.variant( resize: "100x100^", gravity: "center", crop: "100x100+0+0" ) %>
        <% end %>
      </p>      
    </div>
  <% end %>
</div>

<%= paginate @users %>
